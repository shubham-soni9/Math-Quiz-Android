<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/CustomTextAppearance.Regular</item>
    </style>

    <style name="CustomDialog">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_scale_out</item>
    </style>

    <!--Custom text appearances-->
    <!--Custom text appearances-->
    <style name="CustomTextAppearance.Bold" parent="android:TextAppearance"><!-- Custom Attr-->
        <item name="android:fontFamily">@font/font_bold</item>
    </style> <!--Custom text appearances-->


    <style name="CustomTextAppearance.Light" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/font_light</item>
    </style>

    <style name="CustomTextAppearance.Medium" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/font_medium</item>
    </style>

    <style name="CustomTextAppearance.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>


    <style name="home_btn_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:background">@drawable/app_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAppearance">@style/CustomTextAppearance.Regular</item>
        <item name="android:paddingTop">@dimen/_20dp</item>
        <item name="android:paddingBottom">@dimen/_20dp</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="home_btn_card_style" parent="CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="cardElevation">@dimen/_5dp</item>
        <item name="cardCornerRadius">@dimen/_5dp</item>
    </style>

    <style name="text_alignment">
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="met_textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_50</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="met_primaryColor">@color/colorPrimary</item>
        <item name="met_hideUnderline">false</item>
        <item name="met_floatingLabel">normal</item>
        <item name="met_underlineColor">@color/black_05</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="number_picker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="np_dividerColor">@color/transparent</item>
        <item name="np_max">59</item>
        <item name="np_min">0</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="np_selectedTextColor">@color/white</item>
        <item name="np_textColor">@color/white</item>
        <item name="np_selectedTextSize">@dimen/text_size_normal</item>
        <item name="np_textSize">@dimen/text_size_normal</item>
        <item name="np_value">0</item>
        <item name="np_wheelItemCount">1</item>
        <item name="np_hideWheelUntilFocused">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="item_custom_mode_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textAppearance">@style/CustomTextAppearance.Light</item>
        <item name="android:textColor">@color/black_60</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_custom_mode_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textAppearance">@style/CustomTextAppearance.Regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">:</item>
    </style>

    <style name="ButtonThemeCapsule" parent="@android:style/Widget.Button">
        <item name="android:layout_width">
            200dp
        </item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">
            @drawable/capsule_theme_login_selector
        </item>
        <item name="android:textColor">
            @color/white_100
        </item>
        <item name="android:textSize">
            @dimen/text_size_normal
        </item>
        <item name="android:textAllCaps">
            true
        </item>
    </style>

    <style name="keyboard_button_number">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/_15dp</item>
        <item name="android:paddingStart">@dimen/_15dp</item>
        <item name="android:paddingTop">@dimen/_8dp</item>
        <item name="android:paddingBottom">@dimen/_8dp</item>
        <item name="android:textSize">@dimen/text_size_extra_large_x</item>
        <item name="android:background">@drawable/bg_digit</item>
        <item name="android:elevation" tools:targetApi="lollipop">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/_10dp</item>
    </style>

    <style name="CustomDialogStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_scale_out</item>
    </style>

    <style name="side_menu_text_color">
        <item name="android:textAppearance">@style/CustomTextAppearance.Regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:drawablePadding">@dimen/_30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">@dimen/_12dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WinDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustPan|stateUnspecified</item>
    </style>


    <style name="RatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
    </style>

    <style name="RatingBar" parent="RatingBarStyle">
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="appPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@android:color/white</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/CustomTextAppearance.Regular</item>
        <item name="android:itemTextAppearance">@style/CustomTextAppearance.Regular</item>
    </style>

</resources>
