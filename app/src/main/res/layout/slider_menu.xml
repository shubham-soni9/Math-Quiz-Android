<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textAppearance="@style/CustomTextAppearance.Regular"
            android:textColor="@color/white_100"
            android:textSize="@dimen/text_size_title_viii" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_theme_color"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSliderHome"
                style="@style/side_menu_text_color"
                android:drawableStart="@drawable/ic_slider_home"
                android:text="@string/home" />

            <TextView
                android:id="@+id/tvSliderCareer"
                style="@style/side_menu_text_color"
                android:drawableStart="@drawable/ic_career"
                android:text="@string/career_mode" />

            <TextView
                android:id="@+id/tvSliderTutorials"
                style="@style/side_menu_text_color"
                android:drawableStart="@drawable/ic_slider_tutorial"
                android:text="@string/tutorials" />

            <TextView
                android:id="@+id/tvSliderSettings"
                style="@style/side_menu_text_color"
                android:drawableStart="@drawable/ic_slider_settings"
                android:text="@string/settings" />

            <RelativeLayout
                android:id="@+id/rlSliderTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_17sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/side_menu_text_color"
                    android:drawableStart="@drawable/ic_theme"
                    android:text="@string/theme" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivSelectedColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_circle"
                    android:tint="@color/colorPrimary" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:background="@color/black_20" />


            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_9sdp"
                android:text="@string/communicate"
                android:textAllCaps="true"
                android:textAppearance="@style/CustomTextAppearance.Medium"
                android:textColor="@color/tutorial_header" />

            <TextView
                android:id="@+id/tvSliderPolicy"
                style="@style/side_menu_text_color"
                android:drawableStart="@drawable/ic_slider_policy"
                android:text="@string/privacy_policy" />

            <TextView
                android:id="@+id/tvSliderShare"
                style="@style/side_menu_text_color"
                android:drawableStart="@drawable/ic_slider_share"
                android:text="@string/share" />

            <TextView
                android:id="@+id/tvSliderRate"
                style="@style/side_menu_text_color"
                android:drawableStart="@drawable/ic_slider_rate"
                android:text="@string/rate_us" />

            <TextView
                android:id="@+id/tvSliderMoreApps"
                style="@style/side_menu_text_color"
                android:drawableStart="@drawable/ic_slider_more_apps"
                android:text="@string/see_more_apps" />

            <TextView
                android:id="@+id/tvSliderReportBug"
                style="@style/side_menu_text_color"
                android:drawableStart="@drawable/ic_report_bug"
                android:text="@string/report_a_bug" />

            <TextView
                android:id="@+id/tvSliderFeedback"
                style="@style/side_menu_text_color"
                android:drawableStart="@drawable/ic_slider_suggestion"
                android:text="@string/send_feedback" />

            <TextView
                android:id="@+id/tvSliderExit"
                style="@style/side_menu_text_color"
                android:drawableStart="@drawable/ic_slider_exit"
                android:text="@string/exit" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>