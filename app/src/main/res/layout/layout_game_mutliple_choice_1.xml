<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPlayer1Option1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_46sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_multiple_choice"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large_vi"
            tools:text="25" />

        <TextView
            android:id="@+id/tvPlayer1Option2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_46sdp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_multiple_choice"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large_vi"
            tools:text="30" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvPlayer1Option3"
            android:layout_width="0dp"
            android:layout_height="@dimen/_46sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_multiple_choice"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large_vi"
            tools:text="30" />

        <TextView
            android:id="@+id/tvPlayer1Option4"
            android:layout_width="0dp"
            android:layout_height="@dimen/_46sdp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_multiple_choice"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large_vi"
            tools:text="30" />
    </LinearLayout>
</LinearLayout>