<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <include layout="@layout/layout_top_bar" />

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_theme_color"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.7"
                        android:gravity="start"
                        android:text="@string/total"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="@string/colon_text"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x"
                        tools:text="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.7"
                        android:gravity="start"
                        android:text="@string/attempted"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="@string/colon_text"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:id="@+id/tvAttempted"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x"
                        tools:text="08" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.7"
                        android:gravity="start"
                        android:text="@string/correct"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="@string/colon_text"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:id="@+id/tvCorrect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x"
                        tools:text="05" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.7"
                        android:gravity="start"
                        android:text="@string/incorrect"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="@string/colon_text"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:id="@+id/tvInCorrect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textAppearance="@style/CustomTextAppearance.Medium"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x"
                        tools:text="03" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvPlayerScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:background="@color/background_theme_color_dark"
                android:gravity="center"
                android:padding="@dimen/_15dp"
                android:text="@string/player_score"
                tools:text="Player Score  :  75%"
                android:textAppearance="@style/CustomTextAppearance.Medium"
                android:textColor="@color/white_100"
                android:textSize="@dimen/text_size_extra_large_x" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp">

                <com.mathgame.plugin.ProgressWheel
                    android:id="@+id/pbCorrectWheel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_weight="0.5"
                    app:barWidth="17dp"
                    app:countText="7"
                    app:countTextColor="@android:color/white"
                    app:countTextSize="@dimen/text_size_extra_large_x"
                    app:defTextColor="@android:color/white"
                    app:defTextSize="@dimen/text_size_normal"
                    app:definitionText="@string/correct"
                    app:marginBtwText="@dimen/_15dp"
                    app:progressColor="@color/snackbar_bg_color_success" />

                <com.mathgame.plugin.ProgressWheel
                    android:id="@+id/pbInCorrectWheel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    app:barWidth="17dp"
                    app:countText="3"
                    app:countTextColor="@android:color/white"
                    app:countTextSize="@dimen/text_size_extra_large_x"
                    app:defTextColor="@android:color/white"
                    app:defTextSize="@dimen/text_size_normal"
                    app:definitionText="@string/incorrect"
                    app:marginBtwText="@dimen/_15dp"
                    app:progressColor="@color/snackbar_bg_color_error" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:paddingStart="@dimen/_15dp"
                android:paddingEnd="@dimen/_15dp"
                android:paddingBottom="@dimen/_10dp"
                android:paddingTop="@dimen/_10dp"
                android:background="@color/background_theme_color_dark"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/feedback_colon"
                    android:textAppearance="@style/CustomTextAppearance.Medium"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/tvFeedBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:gravity="start"
                    android:text="@string/complete_chart"
                    android:textAppearance="@style/CustomTextAppearance.Medium"
                    android:textColor="@color/gradient_normal_end"
                    tools:text="You need more practice."
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSeeAllQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:background="@color/background_theme_color_dark"
                android:gravity="start"
                android:padding="@dimen/_15dp"
                android:text="@string/see_all_questions"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:textAppearance="@style/CustomTextAppearance.Medium"
                android:textColor="@color/white_10"
                android:textSize="@dimen/text_size_extra_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:background="@color/background_theme_color_dark"
                android:gravity="center"
                android:padding="@dimen/_15dp"
                android:text="@string/complete_chart"
                android:textAppearance="@style/CustomTextAppearance.Medium"
                android:textColor="@color/white_100"
                android:textSize="@dimen/text_size_extra_large_x" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/resultPieChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="@dimen/_10dp" />

        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>