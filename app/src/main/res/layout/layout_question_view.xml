<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        app:cardBackgroundColor="@color/teal_600"
        app:cardCornerRadius="@dimen/_7sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_27sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_27sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:gravity="end">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_17sdp"
                android:layout_toStartOf="@+id/etAnswer"
                android:gravity="center"
                android:text="10 + 20 = "
                android:textAppearance="@style/CustomTextAppearance.Light"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etAnswer"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/cornered_border_unselected"
                android:cursorVisible="false"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="3dp"
                android:singleLine="true"
                android:textSize="35sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>