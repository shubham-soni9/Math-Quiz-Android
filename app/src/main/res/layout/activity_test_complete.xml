<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_theme_color"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.7"
                        android:gravity="start"
                        android:text="@string/total"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="@string/colon_text"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x"
                        tools:text="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.7"
                        android:gravity="start"
                        android:text="@string/attempted"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="@string/colon_text"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x"
                        tools:text="08" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.7"
                        android:gravity="start"
                        android:text="@string/correct"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="@string/colon_text"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x"
                        tools:text="05" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.7"
                        android:gravity="start"
                        android:text="@string/incorrect"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="@string/colon_text"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textAppearance="@style/CustomTextAppearance.Bold"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/text_size_extra_large_x"
                        tools:text="03" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:background="@color/background_theme_color_dark"
                android:gravity="center"
                android:padding="@dimen/_15dp"
                android:text="@string/player_1"
                android:textAppearance="@style/CustomTextAppearance.Bold"
                android:textColor="@color/white_100"
                android:textSize="@dimen/text_size_extra_large_x" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_10dp">

                <com.app.progresviews.ProgressWheel
                    android:id="@+id/userCorrect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_weight="0.5"
                    app:barWidth="17dp"
                    app:countText="7"
                    app:percentage="252"
                    app:countTextColor="@android:color/white"
                    app:countTextSize="@dimen/text_size_extra_large_x"
                    app:defTextColor="@android:color/white"
                    app:defTextSize="@dimen/text_size_normal"
                    app:definitionText="@string/correct"
                    app:marginBtwText="@dimen/_15dp"
                    app:progressColor="@color/snackbar_bg_color_success" />

                <com.app.progresviews.ProgressWheel
                    android:id="@+id/userIncorrect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    app:barWidth="17dp"
                    app:countText="3"
                    app:countTextColor="@android:color/white"
                    app:countTextSize="@dimen/text_size_extra_large_x"
                    app:defTextColor="@android:color/white"
                    app:defTextSize="@dimen/text_size_normal"
                    app:definitionText="@string/incorrect"
                    app:marginBtwText="@dimen/_15dp"
                    app:percentage="108"
                    app:progressColor="@color/snackbar_bg_color_error" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:background="@color/background_theme_color_dark"
                android:gravity="center"
                android:padding="@dimen/_15dp"
                android:text="@string/complete_chart"
                android:textAppearance="@style/CustomTextAppearance.Bold"
                android:textColor="@color/white_100"
                android:textSize="@dimen/text_size_extra_large_x" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/playerOneChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="@dimen/_10dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>