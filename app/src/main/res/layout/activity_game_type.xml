<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_100"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:textSize="23sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivAddOption"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:src="@drawable/ic_add"
                android:tint="@color/colorPrimary"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/vwShadow"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadow_gradient" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    style="@style/home_btn_card_style"
                    android:layout_marginEnd="@dimen/_10dp">

                    <TextView
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_practice"
                        android:text="@string/learn" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/home_btn_card_style">

                    <TextView
                        android:id="@+id/tvDivision"
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_multiple"
                        android:text="@string/practice" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    style="@style/home_btn_card_style"
                    android:layout_marginEnd="@dimen/_10dp">

                    <TextView
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_test"
                        android:text="@string/test" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/home_btn_card_style">

                    <TextView
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_dual"
                        android:text="@string/dual" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    style="@style/home_btn_card_style"
                    android:layout_marginEnd="@dimen/_10dp">

                    <TextView
                        android:id="@+id/tvMultiplication"
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_multiple"
                        android:text="@string/mutltiple" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/home_btn_card_style">

                    <TextView
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_yes_no"
                        android:text="@string/yes_no" />
                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>