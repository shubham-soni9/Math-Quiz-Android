<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:textSize="23sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivAddOption"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:src="@drawable/ic_add"
                android:tint="@color/colorPrimary"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/vwShadow"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadow_gradient" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/game_type_style"
                    android:drawableTop="@drawable/ic_practice"
                    android:text="@string/learn" />

                <TextView
                    style="@style/game_type_style"
                    android:drawableTop="@drawable/ic_multiple"
                    android:text="@string/practice" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/game_type_style"
                    android:drawableTop="@drawable/ic_test"
                    android:text="@string/test" />

                <TextView
                    style="@style/game_type_style"
                    android:drawableTop="@drawable/ic_dual"
                    android:text="@string/dual" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25dp"
                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/game_type_style"
                    android:drawableTop="@drawable/ic_multiple"
                    android:text="@string/mutltiple" />

                <TextView
                    style="@style/game_type_style"
                    android:drawableTop="@drawable/ic_yes_no"
                    android:text="@string/yes_no" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>