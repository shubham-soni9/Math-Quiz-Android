<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLevelName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center"
        android:background="@drawable/bg_level_small"
        android:gravity="center"
        android:minWidth="90dp"
        android:paddingStart="@dimen/_25dp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingEnd="@dimen/_25dp"
        android:paddingBottom="@dimen/_15sdp"
        android:textAppearance="@style/CustomTextAppearance.Bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title_vii"
        tools:text="1" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/ibLock"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center"
        android:background="@drawable/bg_level_lock"
        android:gravity="center"
        android:minWidth="90dp"
        android:paddingStart="@dimen/_25dp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingEnd="@dimen/_25dp"
        android:paddingBottom="@dimen/_15sdp"
        android:src="@drawable/ic_lock"
        android:textAppearance="@style/CustomTextAppearance.Bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title_vii" />

</FrameLayout>

