<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlLock"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/ivLock"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/ivLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_lock" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/ivLock"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/rlLock"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_15dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp">

            <ImageView
                android:id="@+id/ivInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_info" />

            <TextView
                android:layout_alignTop="@+id/ivInfo"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_toEndOf="@+id/ivInfo"
                android:id="@+id/tvLevelName"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_width="wrap_content"
                android:layout_toStartOf="@+id/tvSamleQuestion"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textColor="@color/white_100"
                android:textSize="@dimen/text_size_extra_large_x"
                tools:text="Level 1" />
            <TextView
                android:layout_marginStart="@dimen/_5dp"
                android:id="@+id/tvSamleQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_centerVertical="true"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textColor="@color/white_100"
                android:textSize="@dimen/text_size_extra_large_x"
                tools:text="a + b" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
