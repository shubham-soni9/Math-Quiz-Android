<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="23sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/vwShadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow_gradient" />


    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddition"
                    style="@style/home_btn_style"
                    android:drawableTop="@drawable/ic_add"
                    android:text="@string/addition" />

                <TextView
                    android:id="@+id/tvSubtraction"
                    style="@style/home_btn_style"
                    android:drawableTop="@drawable/ic_subtract"
                    android:text="@string/subtraction" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMultiplication"
                    style="@style/home_btn_style"
                    android:drawableTop="@drawable/ic_multiply"
                    android:text="@string/multiplication" />

                <TextView
                    android:id="@+id/tvDivision"
                    style="@style/home_btn_style"
                    android:drawableTop="@drawable/ic_divide"
                    android:text="@string/division" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPercentage"
                    style="@style/home_btn_style"
                    android:drawableTop="@drawable/ic_modules"
                    android:text="@string/percentage" />

                <TextView
                    android:id="@+id/tvSquareRoot"
                    style="@style/home_btn_style"
                    android:drawableTop="@drawable/ic_square_root"
                    android:text="@string/square_root" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:text="@string/games_learn_with_fun"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/home_btn_style"
                    android:drawableTop="@drawable/ic_abacus"
                    android:text="@string/abacus" />

                <TextView
                    style="@style/home_btn_style"
                    android:drawableTop="@drawable/ic_2048"
                    android:text="@string/two_zero_four_eight" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/home_btn_style"
                    android:background="@drawable/app_button_background"
                    android:drawableTop="@drawable/ic_ttt"
                    android:text="@string/tic_tac_toe" />

                <TextView
                    style="@style/home_btn_style"
                    android:background="@drawable/app_button_background"
                    android:drawableTop="@drawable/ic_sudoku"
                    android:drawableTint="@color/colorPrimary"
                    android:text="@string/sudoku" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>