<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/number_of_questions"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edittext_border"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="10"
                    android:textColor="@color/colorPrimary"
                    android:textCursorDrawable="@null" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_05" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCustomFieldLabel"
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/number_of_variables"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_05" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlDropDownParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_grey"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_horizontal_margin">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/vCustomFieldsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/custom_field_dropdown" />

                    <LinearLayout
                        android:id="@+id/llDropDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingTop="@dimen/custom_field_padding"
                        android:paddingRight="16dp"
                        android:paddingBottom="@dimen/custom_field_padding">

                        <View
                            android:id="@+id/vDownArrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/arrow_down" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@id/vCustomFieldsIcon">

                        <TextView
                            android:id="@+id/tvDropDownValue"
                            style="@style/text_alignment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="@string/select_text"
                            android:textColor="@color/black_100"
                            android:textSize="@dimen/text_size_normal" />

                        <Spinner
                            android:id="@+id/spnCustomFieldValues"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="-10dp"
                            android:background="@android:drawable/edit_text"
                            android:backgroundTint="@color/colorPrimary"
                            android:textColor="@color/app_text_color" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_05" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/choose_operations"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_05" />
                </RelativeLayout>

                <com.mathgame.plugin.flowlayout.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">

                    <com.rey.material.widget.CheckBox
                        style="@style/Material.Drawable.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/addition"
                        android:textSize="@dimen/text_size_normal"
                        app:cbd_strokeColor="@color/colorPrimary" />

                    <com.rey.material.widget.CheckBox
                        style="@style/Material.Drawable.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/subtraction"
                        android:textSize="@dimen/text_size_normal"
                        app:cbd_strokeColor="@color/colorPrimary" />

                    <com.rey.material.widget.CheckBox
                        style="@style/Material.Drawable.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/multiplication"
                        android:textSize="@dimen/text_size_normal"
                        app:cbd_strokeColor="@color/colorPrimary" />

                    <com.rey.material.widget.CheckBox
                        style="@style/Material.Drawable.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/division"
                        android:textSize="@dimen/text_size_normal"
                        app:cbd_strokeColor="@color/colorPrimary" />

                    <com.rey.material.widget.CheckBox
                        style="@style/Material.Drawable.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/percentage"
                        android:textSize="@dimen/text_size_normal"
                        app:cbd_strokeColor="@color/colorPrimary" />

                    <com.rey.material.widget.CheckBox
                        style="@style/Material.Drawable.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/square_root"
                        android:textSize="@dimen/text_size_normal"
                        app:cbd_strokeColor="@color/colorPrimary" />

                </com.mathgame.plugin.flowlayout.FlowLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>