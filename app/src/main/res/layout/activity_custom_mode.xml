<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/title"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <com.mathgame.plugin.MaterialEditText
                        style="@style/edit_text_style"
                        android:hint="@string/enter_settings_title"
                        android:textColor="@color/app_text_color"
                        app:met_floatingLabel="none"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        app:met_hideUnderline="true" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_05" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/questions"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black_05" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/number_of_questions"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_normal" />

                    <com.mathgame.plugin.numberpicker.NumberPicker
                        style="@style/number_picker"
                        app:np_max="99" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black_05" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/player_type"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black_05" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal">

                    <com.rey.material.widget.RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.5"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/single_player"
                        app:rbd_strokeColor="@color/colorPrimary" />

                    <com.rey.material.widget.RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.5"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/dual_player"
                        app:rbd_strokeColor="@color/colorPrimary" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_05" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCustomFieldLabel"
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/challenge_type"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_05" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlChallengeType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_grey"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/vCustomFieldsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/custom_field_dropdown" />

                    <LinearLayout
                        android:id="@+id/llDropDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingTop="@dimen/custom_field_padding"
                        android:paddingRight="16dp"
                        android:paddingBottom="@dimen/custom_field_padding">

                        <View
                            android:id="@+id/vDownArrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/arrow_down" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@id/vCustomFieldsIcon">

                        <TextView
                            android:id="@+id/tvDropDownValue"
                            style="@style/text_alignment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="@string/select_text"
                            android:textColor="@color/black_100"
                            android:textSize="@dimen/text_size_normal" />

                    </RelativeLayout>
                </RelativeLayout>

                <Spinner
                    android:id="@+id/spnCustomFieldValues"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@android:drawable/edit_text"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/app_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_10" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/choose_operations"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_10" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.rey.material.widget.CheckBox
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.5"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/addition"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />

                        <com.rey.material.widget.CheckBox
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="0.5"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/subtraction"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />

                        <com.rey.material.widget.CheckBox
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.5"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/multiplication"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.rey.material.widget.CheckBox
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/division"
                            android:layout_weight="0.5"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />

                        <com.rey.material.widget.CheckBox
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="0.5"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/percentage"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />

                        <com.rey.material.widget.CheckBox
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="0.5"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/square_root"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_10" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/variables"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/number_of_variables"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_normal" />

                    <com.mathgame.plugin.numberpicker.NumberPicker
                        android:id="@+id/npNumberOfQuestion"
                        style="@style/number_picker"
                        app:np_max="5"
                        app:np_min="1" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_10" />

                <RelativeLayout
                    android:id="@+id/rlCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/time_type"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_10" />

                </RelativeLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.rey.material.widget.RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/none"
                        app:rbd_strokeColor="@color/colorPrimary" />

                    <com.rey.material.widget.RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/timer_per_test"
                        app:rbd_strokeColor="@color/colorPrimary" />

                    <com.rey.material.widget.RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/timer_per_question"
                        app:rbd_strokeColor="@color/colorPrimary" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black_10" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/timer_per_question"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentEnd="true">

                        <com.mathgame.plugin.numberpicker.NumberPicker style="@style/number_picker" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=" : "
                            android:textStyle="bold" />

                        <com.mathgame.plugin.numberpicker.NumberPicker style="@style/number_picker" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_10" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/skip_option"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/npNumberOfSkip"
                        android:text="@string/number_of_skip"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_normal" />

                    <com.mathgame.plugin.numberpicker.NumberPicker
                        android:id="@+id/npNumberOfSkip"
                        style="@style/number_picker" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>