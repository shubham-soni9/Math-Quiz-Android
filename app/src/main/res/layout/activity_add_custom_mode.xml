<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/title"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <com.mathgame.plugin.MaterialEditText
                        android:id="@+id/metTitle"
                        style="@style/edit_text_style"
                        android:layout_height="@dimen/_46sdp"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_settings_title"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        android:textColor="@color/app_text_color"
                        app:met_floatingLabel="none"
                        app:met_hideUnderline="true" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black_05" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/questions"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@color/black_05" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/number_of_questions"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_normal" />

                    <com.mathgame.plugin.numberpicker.NumberPicker
                        android:id="@+id/npNumberOfQuestion"
                        style="@style/number_picker"
                        app:np_max="99"
                        app:np_min="1" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/black_05" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/player_type"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@color/black_05" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:orientation="horizontal">

                    <com.rey.material.widget.RadioButton
                        android:id="@+id/rbSinglePlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="0.5"
                        android:checked="true"
                        android:drawablePadding="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:text="@string/single_player"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        app:rbd_strokeColor="@color/colorPrimary" />

                    <com.rey.material.widget.RadioButton
                        android:id="@+id/rbDualPlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="0.5"
                        android:drawablePadding="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:text="@string/dual_player"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        app:rbd_strokeColor="@color/colorPrimary" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black_05" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/challenge_type"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_05" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlChallengeType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_grey"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/vCustomFieldsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:background="@drawable/custom_field_dropdown" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_14sdp"
                        android:paddingTop="@dimen/custom_field_padding"
                        android:paddingRight="@dimen/_14sdp"
                        android:paddingBottom="@dimen/custom_field_padding">

                        <View
                            android:layout_width="@dimen/_21sdp"
                            android:layout_height="@dimen/_21sdp"
                            android:background="@drawable/arrow_down" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_toEndOf="@id/vCustomFieldsIcon">

                        <TextView
                            android:id="@+id/tvSelectedChallenge"
                            style="@style/text_alignment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="@string/select_text"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textColor="@color/black_100"
                            android:textSize="@dimen/text_size_normal" />

                    </RelativeLayout>
                </RelativeLayout>

                <Spinner
                    android:id="@+id/spnCustomFieldValues"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@android:drawable/edit_text"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/app_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black_10" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/choose_operations"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_10" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.rey.material.widget.CheckBox
                            android:id="@+id/cbAddition"
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="center_vertical"
                            android:text="@string/addition"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />

                        <com.rey.material.widget.CheckBox
                            android:id="@+id/cbSubtraction"
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_weight="0.5"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="center_vertical"
                            android:text="@string/subtraction"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />

                        <com.rey.material.widget.CheckBox
                            android:id="@+id/cbMultiplication"
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_weight="0.5"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="center_vertical"
                            android:text="@string/multiplication"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.rey.material.widget.CheckBox
                            android:id="@+id/cbDivision"
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="center_vertical"
                            android:text="@string/division"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />

                        <com.rey.material.widget.CheckBox
                            android:id="@+id/cbPercentage"
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_weight="0.5"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="center_vertical"
                            android:text="@string/percentage"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />

                        <com.rey.material.widget.CheckBox
                            android:id="@+id/cbSquareRoot"
                            style="@style/Material.Drawable.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_weight="0.5"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="center_vertical"
                            android:text="@string/square_root"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textSize="@dimen/text_size_normal"
                            app:cbd_strokeColor="@color/colorPrimary" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black_10" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/variables"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/number_of_variables"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_normal" />

                    <com.mathgame.plugin.numberpicker.NumberPicker
                        android:id="@+id/npNumberOfVariables"
                        style="@style/number_picker"
                        app:np_max="5"
                        app:np_min="2" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_3sdp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black_10" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/time_type"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_10" />

                </RelativeLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.rey.material.widget.RadioButton
                        android:id="@+id/rbTimerNone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:checked="true"
                        android:drawablePadding="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:text="@string/none"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        app:rbd_strokeColor="@color/colorPrimary" />

                    <com.rey.material.widget.RadioButton
                        android:id="@+id/rbTimerPerTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:drawablePadding="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:text="@string/per_test"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        app:rbd_strokeColor="@color/colorPrimary" />

                    <com.rey.material.widget.RadioButton
                        android:id="@+id/rbTimerPerQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:text="@string/per_question"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        app:rbd_strokeColor="@color/colorPrimary" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/black_10" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/_8sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/timer_per_question"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_8sdp">

                        <com.mathgame.plugin.numberpicker.NumberPicker
                            android:id="@+id/npTimerMinuteValue"
                            style="@style/number_picker" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=" : "
                            android:textStyle="bold" />

                        <com.mathgame.plugin.numberpicker.NumberPicker
                            android:id="@+id/npTimerSecondValue"
                            style="@style/number_picker" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/black_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:background="@color/black_02"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:letterSpacing="0.12"
                        android:lines="1"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/skip_option"
                        android:textAllCaps="true"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/text_size_tiny" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/black_10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/npNumberOfSkip"
                        android:text="@string/how_many_question_can_be_skipped"
