<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <include layout="@layout/layout_top_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_theme_color"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    style="@style/home_btn_card_style"
                    android:layout_marginEnd="@dimen/_10dp">

                    <TextView
                        android:id="@+id/tvAddition"
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_add"
                        android:text="@string/addition" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/home_btn_card_style">

                    <TextView
                        android:id="@+id/tvSubtraction"
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_subtract"
                        android:text="@string/subtraction" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    style="@style/home_btn_card_style"
                    android:layout_marginEnd="@dimen/_10dp">

                    <TextView
                        android:id="@+id/tvMultiplication"
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_multiply"
                        android:text="@string/multiplication" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/home_btn_card_style">

                    <TextView
                        android:id="@+id/tvDivision"
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_divide"
                        android:text="@string/division" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    style="@style/home_btn_card_style"
                    android:layout_marginEnd="@dimen/_10dp">

                    <TextView
                        android:id="@+id/tvPercentage"
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_modules"
                        android:text="@string/percentage" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/home_btn_card_style">

                    <TextView
                        android:id="@+id/tvSquareRoot"
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_square_root"
                        android:text="@string/square_root" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/games_learn_with_fun"
                android:textColor="@color/white_100"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    style="@style/home_btn_card_style"
                    android:layout_marginEnd="@dimen/_10dp">

                    <TextView
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_abacus"
                        android:text="@string/abacus" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvSlideAddition"
                    style="@style/home_btn_card_style">

                    <TextView
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_2048"
                        android:text="@string/two_zero_four_eight" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:id="@+id/cvTicTacToe"
                    style="@style/home_btn_card_style"
                    android:layout_marginEnd="@dimen/_10dp">

                    <TextView
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_ttt"
                        android:text="@string/tic_tac_toe" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvSudoku"
                    style="@style/home_btn_card_style">

                    <TextView
                        style="@style/home_btn_style"
                        android:drawableTop="@drawable/ic_sudoku"
                        android:text="@string/sudoku" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>