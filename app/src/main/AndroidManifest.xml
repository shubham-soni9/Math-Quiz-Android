<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mathgame">

    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".structure.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.SingleGameActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".unused.AddCustomModeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name=".unused.CustomModeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name=".activity.GameTypeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name=".activity.GameResultActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name=".activity.MultipleQuestionActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name=".plugin.tictactoe.game.TTTGameActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".plugin.tictactoe.selection.SelectionActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.AnalyticsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.DualGameActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.WebViewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.mathgame.plugin.slidegame.SlideAdditionActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".plugin.sudoku.ui.SudokuMainActivity"
            android:label="@string/app_name" />

        <activity android:name=".plugin.sudoku.ui.SettingsActivity" />

        <activity android:name=".plugin.sudoku.ui.SudokuGameActivity" />


        <activity
            android:name=".plugin.sudoku.ui.LoadGameActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".plugin.sudoku.ui.StatsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".plugin.sudoku.ui.HelpActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".plugin.sudoku.controller.GeneratorService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>